#################################################################################
#
# The waive file for spyglass
#
#
# waive [ -ignore ] [ -regexp ] [ -disable ]
#   [ -file <file-list> ]
#   [ -file_line <file-line> ]
#   [ -file_lineblock <file-sline-eline> ]
#   [ -du <du-list> | <logical-lib-name> ]
#   [ -ip <ip-list> | <logical-lib-name> ]
#   [ -rule | -rules <rule-list> | <keyword> ]
#   [ -except <rule-list> | <keyword> ]
#   [ -msg <message> ]
#   [ -severity <label> ]
#   [ -weight <weight> ]
#   [ -weight_range <weight-value> <weight-value> ]
#   [ -import <block_name> <block-waive-file> ]
#   [ -comment <comment> ]
#
#################################################################################
waive -regexp 	-rule "CMD_define02"		-msg "Macro specification '\+define\+([A-Z0-9_]+)' not used in current run"			-comment "(WONTFIX) The macro is for testbench."
waive -regexp 	-rule "checkCMD_unused_param01"	-msg "Parameter '-not_used_signal' has been ignored as none of the dependent rules are enabled"	-comment "(WONTFIX) The parameter has been ignored since W240/W528 is ignored"

# GCK
waive -regexp	-rule "InferLatch"		-msg "Latch inferred for signal '(.+)' in module 'gck'"				-comment "(WONTFIX) This module is for simulation, remove this waiver when use real ram cell."

# RAM
waive -regexp					-du "nds.*_ram*"									-comment "(WONTFIX) This module is for simulation, remove this waiver when use real ram cell."
waive -regexp	-rule "CheckDelayTimescale-ML"											-comment "(WONTFIX) This module is for simulation, remove this waiver when use real ram cell."
waive -regexp 	-rule "ErrorAnalyzeBBox"	-file "*_ram.v"									-comment "(WONTFIX) This module is for simulation, remove this waiver when use real ram cell."
waive -regexp 	-rule "ELAB_3518"		-file "*_ram.v"									-comment "(WONTFIX) This module is for simulation, remove this waiver when use real ram cell."

# Valid coding style
waive 		-rule "FlopEConst"												-comment "(WONTFIX) Passing a constant to an enable signal isn't a big deal."

waive -regexp	-rule "NoAssignX-ML"												-comment "(WONTFIX) Do not assignment of X as error, Andes use this for debugging."

# Do not add rule to waive list
#waive -regexp	-rule "ReEntrantOutput-ML"	-msg "Output port '(.+)' is driving the input port '(.+)' of the same instance"	-comment "(WONTFIX) Fall through input to output isn't a big deal."

waive -regexp	-rule "SignedUnsignedExpr-ML"											-comment "(WONTFIX) Unsigned expression used with signed expression is a valid coding style."

waive -regexp	-rule "STARC05-1.1.4.8" 	-msg "Specify base explicitly for parameter '([A-Z0-9_]+)'"			-comment "(WONTFIX) Assign an integer to a paramenter without base is a valid coding style."
waive -regexp	-rule "STARC05-1.2.1.1a"	-msg "Both edges of clock 'aopd_dbg_tck' used in the design"			-comment "(WONTFIX) Debugger related clock signal is allowed to be used in both edge."

# Do not add rule to waive list
#waive -regexp	-rule "STARC05-3.2.3.1"		-msg "Use instance port connections by name rather than by position"		-comment "(WONTFIX) Instance port connections by position is a valid coding style"

waive -regexp	-rule "W226"			-msg "Case select expression '1'b1' is constant"				-comment "(WONTFIX) Case selection expression is constant 1'b1 is a valid coding style."

waive -regexp	-rule "STARC05-2.10.3.1"	-msg "Operand bit-width mismatch for operator '(<|>)'"				-comment "(WONTFIX) Ignore comparasion operator bit-width mismatch."
waive -regexp	-rule "W362"			-msg "For operator \((<|>)\)"							-comment "(WONTFIX) Ignore comparasion operator bit-width mismatch."

waive -regexp	-rule "VarName"			 -msg "Variable nds_unused_(.+) does not follow naming convention"	-comment "(WONTFIX) Valid naming convention with prefix nds_unused_."
