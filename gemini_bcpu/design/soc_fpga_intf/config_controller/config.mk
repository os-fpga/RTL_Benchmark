CONFIG_CONTROLER_ABS_PATH := $(dir $(realpath $(lastword $(MAKEFILE_LIST))))

include $(CONFIG_CONTROLER_ABS_PATH)../../ip/FCB/config.mk
ifeq ($(USE_FCB_STUB),1)
	CONFIG_CONTROLER_RTL_SRC := $(RTL_STUB)
else
	CONFIG_CONTROLER_RTL_SRC := $(RTL_SRC)
endif
CONFIG_CONTROLER_RTL_INC := $(RTL_INC)


include $(CONFIG_CONTROLER_ABS_PATH)../../ip/FFCC/config.mk
CONFIG_CONTROLER_RTL_SRC += $(RTL_SRC)
CONFIG_CONTROLER_RTL_INC += $(RTL_INC)


CONFIG_CONTROLER_RTL_SRC += $(CONFIG_CONTROLER_ABS_PATH)ccb/fpga_pll_regs.sv \
$(CONFIG_CONTROLER_ABS_PATH)ccb/ccb.sv \
$(CONFIG_CONTROLER_ABS_PATH)ofe/ofe.sv \
$(CONFIG_CONTROLER_ABS_PATH)ofe/ofe_regs.sv \
$(CONFIG_CONTROLER_ABS_PATH)config_controller.sv

CONFIG_CONTROLER_RTL_INC += $(CONFIG_CONTROLER_ABS_PATH)

RTL_SRC := $(CONFIG_CONTROLER_RTL_SRC)
RTL_INC := $(CONFIG_CONTROLER_RTL_INC)
