# General paths settings
export M1_ROOT=~/m1_core/trunk
export PATH=.:$M1_ROOT/tools/bin:$PATH

# Filelist names
export FILELIST_VCS=$M1_ROOT/hdl/filelist.vcs
export FILELIST_ICARUS=$M1_ROOT/hdl/filelist.icarus
export FILELIST_DC=$M1_ROOT/hdl/filelist.dc
export FILELIST_FPGA=$M1_ROOT/hdl/filelist.fpga
export FILELIST_XST=$M1_ROOT/hdl/filelist.xst

# Alias to quickly "Change Directory to Design"...
alias cdd='cd $M1_ROOT'

# Choose your favorite editor here (for SVN)
export EDITOR=emacs
