50 REM DRAWLINE
100 dx = ABS(xb-xa)
110 dy = ABS(yb-ya)
120 sx = SGN(xb-xa)
130 sy = SGN(yb-ya)
140 er = dx-dy
150 PLOT xa,ya
160 if xa<>xb goto 200
170 if ya=yb goto 300
200 ee = er * 2
210 if ee <= -dy goto 240
220 er = er - dy
230 xa = xa + sx
240 if ee >= dx goto 270
250 er = er + dx
260 ya = ya + sy
270 GOTO 150
300 RETURN



