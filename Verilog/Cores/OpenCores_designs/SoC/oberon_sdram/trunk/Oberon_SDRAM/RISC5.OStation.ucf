NET "SRadr[6]"  LOC=H22;
NET "SRadr[7]"  LOC=J22;
NET "SRadr[8]"  LOC=K22;
NET "SRadr[9]"  LOC=L22;
NET "SRadr[10]" LOC=M22;
NET "SRadr[11]" LOC=L21;
NET "SRadr[12]" LOC=J21;
NET "SRadr[13]" LOC=J20;
NET "SRadr[14]" LOC=H21;
NET "SRadr[15]" LOC=B13;
NET "SRadr[16]" LOC=C12;
NET "SRadr[17]" LOC=B11;
NET "SRdat[0]"  LOC=A17;
NET "SRdat[1]"  LOC=A18;
NET "SRdat[2]"  LOC=A19;
NET "SRdat[3]"  LOC=A20;
NET "SRdat[4]"  LOC=C21;
NET "SRdat[5]"  LOC=D21;
NET "SRdat[6]"  LOC=E20;
NET "SRdat[7]"  LOC=F21;
NET "SRdat[8]"  LOC=E22;
NET "SRdat[9]"  LOC=D22;
NET "SRdat[10]" LOC=C22;
NET "SRdat[11]" LOC=B22;
NET "SRdat[12]" LOC=B20;
NET "SRdat[13]" LOC=B19;
NET "SRdat[14]" LOC=C18;
