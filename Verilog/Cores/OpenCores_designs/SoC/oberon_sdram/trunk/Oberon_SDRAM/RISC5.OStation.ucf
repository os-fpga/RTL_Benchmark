NET "SRdat[17]" LOC=B9;
NET "SRdat[18]" LOC=B8;
NET "SRdat[19]" LOC=C7;
NET "SRdat[20]" LOC=N22; 
NET "SRdat[21]" LOC=P20;
NET "SRdat[22]" LOC=N21;
NET "SRdat[23]" LOC=M20;
NET "SRdat[24]" LOC=T20;
NET "SRdat[25]" LOC=R22;
