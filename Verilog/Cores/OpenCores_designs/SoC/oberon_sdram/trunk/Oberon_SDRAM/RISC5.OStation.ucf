# OberonStation rev. B onwards  PDR 03.10.2015
#
#PCI power clamp diode needed for PS/2 inputs
#crudely remove bank clashes by setting global IOSTANDARD
NET "*" IOSTANDARD=PCI33_3;
CONFIG VCCAUX=3.3;

NET "OSCIN" LOC=AB12;
NET "OSCIN" TNM_NET = "osc";
TIMESPEC "TS_osc" = PERIOD "osc" 16.667ns;

NET "TxD" LOC = "D1";
NET "RxD" LOC = "D2" ;

# map spare btns to Aux port below serial
NET "btn[0]" LOC = "G1" |PULLDOWN; #AUX0
NET "btn[1]" LOC = "F1" |PULLDOWN; #AUX1
NET "btn[2]" LOC = "F2" |PULLDOWN; #AUX2
#NET "AUX[3]"   LOC=E1; #unused
#NET "AUX[4]"   LOC=E3; #unused
NET "btn[3]" LOC = "B4" |PULLDOWN;  #reset

#map (inverted!) switches sw0..2,7 to jumpers J0..2,3
NET "swi[0]" LOC = "Y9" |PULLUP;  #J0
NET "swi[1]" LOC = "AA8" |PULLUP; #J1
NET "swi[2]" LOC = "Y7" |PULLUP;  #J2
NET "swi[3]" LOC = "Y5" |PULLUP;  #"J4" (not labeled)
NET "swi[4]" LOC = "U5" |PULLUP; #not connected
NET "swi[5]" LOC = "W6" |PULLUP; #not connected
NET "swi[6]" LOC = "V14" |PULLUP; #not connected
NET "swi[7]" LOC = "AA6" |PULLUP; #J3

NET "leds[0]" LOC = "Y18"; 
NET "leds[1]" LOC = "AA17"; 
NET "leds[2]" LOC = "AA15"; 
NET "leds[3]" LOC = "Y15"; 
NET "leds[4]" LOC = "AA14"; 
NET "leds[5]" LOC = "Y13"; 
NET "leds[6]" LOC = "Y11"; 
NET "leds[7]" LOC = "AA10"; 

# SRAM
NET "SRce0"  LOC=A16;
NET "SRce1"  LOC=B6;
NET "SRwe0"  LOC=G20;
NET "SRwe1"  LOC=F22;
NET "SRoe0"  LOC=C14;
NET "SRoe1"  LOC=A5;
NET "SRbe[0]"  LOC=C16;
NET "SRbe[1]"  LOC=B15;
NET "SRbe[2]"  LOC=A6;
NET "SRbe[3]"  LOC=C5;
NET "SRadr[0]"  LOC=A11;
NET "SRadr[1]"  LOC=A12;
NET "SRadr[2]"  LOC=A13;
NET "SRadr[3]"  LOC=A14;
NET "SRadr[4]"  LOC=A15;
