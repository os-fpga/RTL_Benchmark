       CONSTANT port, 04
       ;
start: LOAD s2, FF       ;initial output value
  rep: OUTPUT s2, port
       LOAD s0, 1F       ;delay size
loop0: LOAD sB, FF
loop1: LOAD sC, FF
loop2: SUB sC, 01
       JUMP NZ, loop2
       SUB sB, 01
       JUMP NZ, loop1
       SUB s0, 01        ;delay loop
       JUMP NZ, loop0
       XOR s2, FF        ;toggle waveform
       JUMP rep          ;repeat sequence
